// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  avatarUrl    String
  firstName    String
  lastName     String
  email        String         @unique
  country      String
  street       String
  city         String
  region       String
  postalCode   String
  createdRooms Room[]
  invitedRooms UsersInRooms[]
  giftees      Wish[]         @relation("giftee")
  santas       Wish[]         @relation("santa")
}

model Room {
  id        Int            @id @default(autoincrement())
  createdAt DateTime       @default(now())
  name      String
  tag       Tag
  creator   User           @relation(fields: [creatorId], references: [id])
  creatorId String
  members   UsersInRooms[]
  wishes    Wish[]
}

model UsersInRooms {
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  room       Room     @relation(fields: [roomId], references: [id])
  roomId     Int
  isApproved Boolean  @default(false)
  invitedAt  DateTime @default(now())
  joinedAt   DateTime @updatedAt

  @@id([userId, roomId])
}

model Wish {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  acceptedAt DateTime? @updatedAt
  room       Room      @relation(fields: [roomId], references: [id])
  roomId     Int
  giftName   String
  giftUrl    String
  giftee     User      @relation(name: "giftee", fields: [gifteeId], references: [id])
  gifteeId   String
  santa      User?     @relation(name: "santa", fields: [santaId], references: [id])
  santaId    String?
}

enum Tag {
  FAMILY
  FRIENDS
  COWORKERS
}
